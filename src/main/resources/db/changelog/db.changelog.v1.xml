<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="1" author="Svyter">

        <createTable tableName="users">
            <column name="user_id" type="bigint" autoIncrement="true">
                <constraints  primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="role" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="tasks_list" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createTable tableName="tasks">
            <column name="task_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="task_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="subtasks_list" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>

            </column>
            <column name="urgency" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="subtasks">
            <column name="subtask_id" type="INT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="task_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(255)">
            </column>
            <column name="urgency" type="VARCHAR(255)">
            </column>
        </createTable>

        <createTable tableName="urgencyLevel">
            <column name="urgency_id" type="INT">
                <constraints primaryKey="true" />
            </column>
            <column name="urgency_name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="statusLevel">
            <column name="status_id" type="INT">
                <constraints primaryKey="true" />
            </column>
            <column name="name_status" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="roles">
            <column name="role_id" type="INT">
                <constraints primaryKey="true" />
            </column>
            <column name="name_role" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <sql>
            INSERT INTO statusLevel (status_id, name_status) VALUES
            (1, 'Создано'),
            (2, 'В работе'),
            (3, 'На проверке'),
            (4, 'Завершено');

            INSERT INTO urgencyLevel (urgency_id, urgency_name) VALUES
            (1, 'Тривиальный'),
            (2, 'Низкий'),
            (3, 'Средний'),
            (4, 'Высокий'),
            (5, 'Критический');
        </sql>

    </changeSet>

</databaseChangeLog>
